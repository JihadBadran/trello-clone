{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",

    "noEmit": true,
    "allowJs": true,

    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [
      "node",
      "vite/client",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ]
  },
  "include": ["src", "src/**/*.d.ts"],
  "exclude": [
    "dist",
    "out-tsc",
    "src/**/*.spec.*",
    "src/**/*.test.*",
    "vite.config.*",
    "vitest.config.*",
    "eslint.config.*",
    ".storybook/**"
  ],
  "references": [
    {
      "path": "../../packages/features/boards/presentation"
    },
    {
      "path": "../../packages/features/kanban/presentation"
    },
    {
      "path": "../../packages/infra/supabase"
    },
    {
      "path": "../../packages/capabilities/auth"
    },
    {
      "path": "../../packages/uikit"
    },
    {
      "path": "../../packages/features/kanban/application-react"
    }
  ]
}
